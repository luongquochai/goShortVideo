<form id="uploadForm" hx-post="/api/upload" hx-encoding="multipart/form-data" hx-swap="outerHTML" enctype="multipart/form-data">
    <input type="file" name="video" accept="video/*" class="p-2 border rounded-lg w-full">
    <input type="text" name="description" placeholder="Description" class="p-2 border rounded-lg w-full mt-2">
    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg mt-2 w-full">Upload</button>
</form>
